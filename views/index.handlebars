<h1>Eat-Da-Burger!</h1>

<div id="burger-div">
  <img src="/assets/img/hiclipart.com.png" alt="">
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers you can eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Burgers you have eaten!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block-eaten devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="form-div">
  <h2>Add a Burger</h2>
  <form class="form-inline create-form float-center">
    <div class="form-group mx-sm-3 mb-2">
      <label for="ca" class="sr-only">Burger Name:</label>
      <input type="text" class="form-control" id="ca" placeholder="Add a burger!" name="name">
    </div>
    <button type="submit" class="btn btn-secondary">Add Burger</button>
  </form>
</div>

